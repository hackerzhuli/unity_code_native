/* Test file for enhanced variable validation */

:root {
    --primary-color: #ff0000;
    --invalid-color: not-a-color;
    --margin-size: 10px;
}

.test-class {
    /* This should pass - valid without variables */
    color: blue;
    
    /* This should pass - valid with variable resolution */
    background-color: var(--primary-color);
    
    /* This should generate an error - invalid even with variable resolution */
    border-color: var(--invalid-color);
    
    /* This should generate a warning - uncertain due to unresolved variable */
    margin: var(--unknown-variable);
    
    /* This should pass - valid with variable resolution */
    padding: var(--margin-size);
}