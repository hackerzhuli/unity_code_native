/* Test USS file to demonstrate variable resolution in diagnostics */

:root {
    --primary-color: #ff0000;
    --invalid-color: invalid-value;
    --margin-size: 10px;
}

.test-class {
    /* This should pass validation without variable resolution */
    color: red;
    
    /* This should pass validation with variable resolution */
    background-color: var(--primary-color);
    
    /* This should generate a warning due to invalid variable value */
    border-color: var(--invalid-color);
    
    /* This should generate a warning due to unresolved variable */
    margin: var(--unknown-variable);
    
    /* This should pass with variable resolution */
    padding: var(--margin-size);
}